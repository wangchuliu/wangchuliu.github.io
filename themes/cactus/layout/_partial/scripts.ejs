<!-- katex -->
<% if (is_post() && page.LaTeX) { %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.11.1/dist/katex.min.css" integrity="sha384-zB1R0rpPzHqg7Kpt0Aljp8JPLqbXI3bhnPWROx27a9N0Ll6ZP/+DiW/UqRcLbRjq" crossorigin="anonymous">
<script defer src="https://cdn.jsdelivr.net/npm/katex@0.11.1/dist/katex.min.js" integrity="sha384-y23I5Q6l+B6vatafAwxRu/0oK/79VlbSz7Q9aiSZUvyWYIYsd+qj+o24G5ZU2zJz" crossorigin="anonymous"></script>
<script defer src="https://cdn.jsdelivr.net/npm/katex@0.11.1/dist/contrib/auto-render.min.js" integrity="sha384-kWPLUVMOks5AQFrykwIup5lo0m3iMkkHrD0uJ4H5cjeGihAutqP0yW0J6dpFiVkI" crossorigin="anonymous"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    let macros = {
      "\\T": "\\text{T}",
      "\\F": "\\textcolor{gray}{\\text{F}}",
      "\\cmark": "✔",
      "\\xmark": "✘",
    };

    renderMathInElement(document.body, {
      delimiters: [
        { left: "$", right: "$", display: false },
      ],
      macros: macros
    });

    let scripts = document.body.getElementsByTagName("script");
    scripts = Array.prototype.slice.call(scripts);
    scripts.forEach(function(script) {
        if (!script.type || !script.type.match(/math\/tex/i)) {
            return -1;
        }
        const display =
              (script.type.match(/mode\s*=\s*display(;|\s|\n|$)/) != null);

        const katexElement = document.createElement(display ? "div" : "span");
        katexElement.setAttribute("class",
                                  display ? "equation" : "inline-equation");
        try {
            katex.render(script.text, katexElement, {displayMode: display, macros: macros});
        } catch (err) {
            //console.error(err); linter doesn't like this
            katexElement.textContent = script.text;
        }
        script.parentNode.replaceChild(katexElement, script);
    });
  });

</script>
<% } %>
